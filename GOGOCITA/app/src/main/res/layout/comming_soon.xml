<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logo" />
        <TextView
            android:id="@+id/tv_commingsoom"
            android:layout_below="@+id/imageView_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_margin_top"
            android:layout_marginBottom="@dimen/edit_margin_bottom"
            android:layout_marginRight="@dimen/edit_margin_right"
            android:layout_marginLeft="@dimen/edit_margin_left"
            android:text="COMMING SOON"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/edit_margin_bottom"
            android:layout_marginRight="@dimen/edit_margin_right"
            android:layout_marginLeft="@dimen/edit_margin_left"
            android:id="@+id/tv"
            android:layout_below="@+id/tv_commingsoom"
            android:text="We will develop this functionally as quickly as possible"
            android:textSize="@dimen/text_size_small"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/grey"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/bt_goback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_margin_top"
            android:layout_below="@+id/tv"
            android:layout_marginBottom="@dimen/edit_margin_bottom"
            android:layout_marginRight="@dimen/edit_margin_right"
            android:layout_marginLeft="@dimen/edit_margin_left"
            android:background="@drawable/border_button"
            android:textColor="@color/white"
            android:text="Go back"
            android:textSize="@dimen/text_size_large"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>