<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:layout_margin="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/menu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <ScrollView
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/bghomestay"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/pink"
                        android:gravity="center_horizontal|center_vertical">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/rate"/>

                        <TextView
                            android:id="@+id/tv_servicedetail_evalution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="4.5"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/heart" />

                        <TextView
                            android:id="@+id/tv_servicedetail_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="120"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/comment" />

                        <TextView
                            android:id="@+id/tv_servicedetail_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="15"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_servicedetail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="@dimen/text_padding"
                        android:text="Name of homestay"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/grey"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_servicedetail_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="15dp"
                            android:text="những phụ thuộc như vậy được gọi là tầm thường. Một cách hình thức, một phụ thuộc hàm X → Y là tầm thường những phụ thuộc như vậy được gọi là tầm thường. Một cách hình thức, một phụ thuộc hàm X → Y là tầm thường những phụ thuộc như vậy được gọi là tầm thường. Một cách hình thức, một phụ thuộc hàm X → Y là tầm thường những phụ thuộc như vậy được gọi là tầm thường. Một cách hình thức, một phụ thuộc hàm X → Y là tầm thường những phụ thuộc như vậy được gọi là tầm thường. Một cách hình thức, một phụ thuộc hàm X → Y là tầm thường những phụ thuộc như vậy được gọi là tầm thường. Một cách hình thức, một phụ thuộc hàm X → Y là tầm thường nếu X Y, ngược lại, nó được gọi là không tầm thường. Quy tắc tăng nói rằng việc thêm cùng một tập thuộc tính vào cả hai vế của một phụ thuộc hàm sẽ tạo ra một phụ thuộc hàm đúng đắn. Theo quy tắc 3, các phụ thuộc hàm là bắc cầu. Quy tắc chiếu (QT4) nói rằng chúng ta có thể bỏ bớt các thuộc tính ra khỏi vế phải của phụ thuộc  "
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tv_servicedetail_start1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/star" />

                        <ImageView
                            android:id="@+id/tv_servicedetail_start2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/star" />

                        <ImageView
                            android:id="@+id/tv_servicedetail_start3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/star" />

                        <ImageView
                            android:id="@+id/tv_servicedetail_start4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/star" />

                        <ImageView
                            android:id="@+id/tv_servicedetail_start5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/starhalf" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/edit_margin_left"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_servicedetail_vote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Votes"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/btn_servicedetail_book"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/pink"
                android:text="BOOK NOW"
                android:textSize="@dimen/text_size_small"
                />
        </LinearLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>