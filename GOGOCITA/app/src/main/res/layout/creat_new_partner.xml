<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gogocita.admin.gogocita.MainActivity">
    <TextView
        android:id="@+id/TextView_UpdateYourProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="0dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:text="UPDATE YOUR PROFILE"
        android:textColor="#454545"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_YourName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView_UpdateYourProfile"
        android:layout_marginHorizontal="25sp"
        android:hint="Your name"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_Birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_YourName"
        android:layout_marginHorizontal="25sp"
        android:hint="Birthday"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_HandPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_Birthday"
        android:layout_marginHorizontal="25sp"
        android:hint="Hand phone"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_HandPhone"
        android:layout_marginHorizontal="25sp"
        android:hint="Gender"
        android:textColor="#454545"
        android:textSize="15dp"
        android:enabled="false"
        android:textStyle="bold"/>
    <RadioGroup
        android:id="@+id/RadioGroup_Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditText_Gender"
        android:layout_marginTop="0dp"
        android:layout_marginHorizontal="25sp"
        >
        <RadioButton
            android:id="@+id/RadioButton_Gender1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Male"
            android:textSize="14sp" />
        <RadioButton
            android:id="@+id/RadioButton_Gender2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="14sp" />
        <RadioButton
            android:id="@+id/RadioButton_Gender3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textSize="14sp" />
    </RadioGroup>
    <EditText
        android:id="@+id/EditText_YourJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RadioGroup_Gender"
        android:layout_marginHorizontal="25sp"
        android:hint="Your job"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_IdentityCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_YourJob"
        android:layout_marginHorizontal="25sp"
        android:hint="Identity card number"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_IdentityCardNumber"
        android:layout_marginHorizontal="25sp"
        android:hint="Email"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_Email"
        android:layout_marginHorizontal="25sp"
        android:hint="Address"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_YourCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_Address"
        android:layout_marginHorizontal="25sp"
        android:hint="Your city"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_District"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_YourCity"
        android:layout_marginHorizontal="25sp"
        android:hint="Your district"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditText_Nationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditText_District"
        android:layout_marginHorizontal="25sp"
        android:hint="Your nationality"
        android:textColor="#454545"
        android:textSize="15dp"
        android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditText_Nationality">
            <EditText
                android:id="@+id/EditText_UploadAvatar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/EditText_Nationality"
                android:layout_marginHorizontal="25sp"
                android:hint="Upload your avatar"
                android:textColor="#454545"
                android:textSize="15dp"
                android:enabled="false"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:layout_toRightOf="@id/EditText_UploadAvatar"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ff586c"
        android:padding="15sp"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</RelativeLayout>