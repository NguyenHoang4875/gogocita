<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:stretchColumns="0,1"
    tools:context="com.gogocita.admin.gogocita.users.UpdateUserDetailActivity">
    <ProgressBar
        android:id="@+id/progressBar_updateinformation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
        <ListView
            android:id="@+id/listview_update_informationuser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"></ListView>
    <Button
        android:id="@+id/button_updateprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff586c"
        android:text="UPDATE"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"/>
</TableLayout>