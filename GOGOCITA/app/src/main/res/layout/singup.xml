<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gogocita.admin.gogocita.users.SingUpActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:gravity="center"
        android:text="SIGN UP"
        android:textColor="#454545"
        android:textSize="27dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editView_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_signup"
        android:layout_marginHorizontal="25sp"
        android:inputType="textEmailAddress"
        android:hint="Your Email"
        android:textColor="#454545"
        android:textSize="19dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editView_youare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editView_email"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="10dp"
        android:hint="You Are"
        android:textColor="#555555"
        android:textSize="19dp"
        android:enabled="false"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup_usertype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editView_youare"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radioButton_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:checked="true"
            android:paddingLeft="150sp"
            android:text="Customer"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/radioButton_homestay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:paddingLeft="150sp"
            android:text="Homestay"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/radioButton_tourisguider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50sp"
            android:paddingLeft="150sp"
            android:text="Touris Guider"
            android:textSize="17sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/editView_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25sp"
        android:inputType="textPassword"
        android:layout_below="@id/radioGroup_usertype"
        android:hint="Password"
        android:textColor="#555555"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editView_repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editView_password"
        android:inputType="textPassword"
        android:layout_marginHorizontal="25sp"
        android:hint="Repeat Password"
        android:textColor="#555555"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/textView_conditions"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginHorizontal="25sp"
        android:layout_below="@id/editView_repassword"
        android:layout_marginTop="15dp"
        android:background="#aaaaaa"
        android:padding="25sp"
        android:text="Terms and conditions ....."
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkbox_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_conditions"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="10sp"
        android:padding="15sp"
        android:text="Accept Terms and conditions"
        android:textColor="#9098a2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_singup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ff586c"
        android:padding="15sp"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</RelativeLayout>