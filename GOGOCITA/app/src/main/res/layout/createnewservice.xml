<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/edit_margin_left"
            android:layout_marginRight="@dimen/edit_margin_right">
            <TextView
                android:id="@+id/tv_createyourservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:text="CREATE YOUR SERVICE"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>
            <EditText
                android:id="@+id/edt_createservice_name"
                android:layout_below="@+id/tv_createyourservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:textColorHint="@color/black"/>
            <EditText
                android:id="@+id/edt_createservice_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_createservice_name"
                android:hint="Type"
                android:textColorHint="@color/black" />
            <RadioGroup
                android:id="@+id/radioGroup_Type"
                android:layout_below="@+id/edt_createservice_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ground house"/>
                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Villa"/>
                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bungalow"/>
            </RadioGroup>
            <EditText
                android:id="@+id/tv_createervice_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroup_Type"
                android:hint="Address"
                android:textColorHint="@color/black"/>
            <RelativeLayout
                android:id="@+id/layout_district"
                android:layout_below="@id/tv_createervice_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_createservice_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"
                    android:textColor="@color/black"
                    />
                <Spinner
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_city"
                android:layout_below="@id/layout_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@color/black"
                    />
                <Spinner
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_country"
                android:layout_below="@id/layout_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textColor="@color/black"
                    />
                <Spinner
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </RelativeLayout>
            <EditText
                android:id="@+id/edt_desciption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_country"
                android:padding="10sp"
                android:text="Desciption..."
                android:textColor="@color/black"
                android:background="@color/grey"/>
            <EditText
                android:layout_below="@+id/edt_desciption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_factility"
                android:text="Facility"/>
            <LinearLayout
                android:id="@+id/layout_facility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_factility"
                android:orientation="horizontal"
                android:weightSum="2">
                <CheckBox
                    android:layout_weight="1"
                    android:id="@+id/checkbox_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wifi"/>
                <CheckBox
                    android:layout_weight="1"
                    android:id="@+id/checkbox_freebreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free breakfast"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_facility2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_facility"
                android:orientation="horizontal"
                android:weightSum="2">
                <CheckBox
                    android:layout_weight="1"
                    android:id="@+id/checkbox_ac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC"/>
                <CheckBox
                    android:layout_weight="1"
                    android:id="@+id/checkbox_swimmingpool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swimming pool"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_uploadimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload image"
                android:textColor="@color/pink"
                android:textSize="15sp"
                android:layout_below="@+id/layout_facility2"/>
            <LinearLayout
                android:layout_below="@+id/btn_uploadimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <EditText
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VND/room/night"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pink"
                android:text="COMPLETE"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>