<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/edit_margin_left">
            <TextView
                android:id="@+id/tv_createyourservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="CREATE YOUR SERVICE"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>
            <EditText
                android:layout_marginTop="@dimen/edit_margin_top"
                android:id="@+id/edt_createservice_name"
                android:layout_below="@+id/tv_createyourservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:textSize="@dimen/text_size_small"
                android:textColorHint="@color/black"/>
            <EditText
                android:layout_marginTop="@dimen/edit_margin_top"
                android:id="@+id/tv_createervice_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_createservice_name"
                android:hint="Address"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_size_small"
                />
            <RelativeLayout
                android:id="@+id/layout_district"
                android:layout_marginTop="@dimen/edit_margin_top"
                android:layout_below="@id/tv_createervice_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_createservice_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    />
                <Spinner
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_city"
                android:layout_marginTop="@dimen/edit_margin_top"
                android:layout_below="@id/layout_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    />
                <Spinner
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_country"
                android:layout_below="@id/layout_city"
                android:layout_marginTop="@dimen/edit_margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    />
                <Spinner
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
            </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_country"
                android:layout_marginTop="@dimen/edit_margin_top"
                android:padding="30sp"
                android:text="Desciption..."
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:background="@color/grey"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pink"
                android:text="COMPLETE"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>